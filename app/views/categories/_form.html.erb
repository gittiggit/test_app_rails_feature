<%= render "shared/errors", obj:@category %>

<%= form_for(@category, html: {class:"form-horizontal", role: "form"}) do |category| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= category.label :name %>
    </div>
    <div class="col-sm-8">
      <%= category.text_field :name, class: "form-control", placeholder: "Enter the category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= category.submit "Create", class:"btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-xs-12 col-xs-offset-4">
  <%= link_to "[Cancel request and back to article listing]", articles_path %>
</div>

