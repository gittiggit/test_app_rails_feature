<h1 align="center">Create a task</h1>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@task, html: {class:"form-horizontal", role: "form"}) do |task| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= task.label :name %>
        </div>
        <div class="col-sm-8">
          <%= task.text_field :name, class: "form-control", placeholder: "Name of the task", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= task.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>